<!-- Page Content -->
<div class="container">
    <div class="row justify-content-around">
        <div class="col-lg-3 col-sm-12 col-md-4">
            <img class="img-fluid" src="/images/shoppin_logo.png">
            <div class="list-group">
                <a href="/categories/best-sellers" class="list-group-item categories">Best Sellers</a>
                <a href="/categories/electronics" class="list-group-item categories">Electronics</a>
                <a href="/categories/home" class="list-group-item categories">Home</a>
            </div>
        </div>
        <div class="col-md-8">
            <img class="img-fluid" src="/images/promo-banner.png" alt="">
        </div>
    </div>
    <div class="container index-products">
        <div class="row justify-content-end flex-wrap">
            {{#eachFrom data 3 }}
            <div class="col-sm-11 col-md-3 col-lg-3">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="/product-page/{{this._id}}" style="height: 220px; position: relative">
                            <img class="card-img-top" src="/uploads/{{this.pic}}" alt="{{this.pic}}">
                        </a>
                        <ul class="social">
                            <li><a href="" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                        {{#if this.best}}
                        <span class="product-new-label"><i>Best</i></span>
                        {{/if}}
                    </div>
                    <div class="product-content">
                        <h3 class="title"><a href="/product-page/{{this._id}}">{{this.title}}</a></h3>
                        <span class="price">
                            <h5>CA${{this.price}}</h5>
                        </span>
                    </div>
                </div>
            </div>
            {{/eachFrom}}
        </div>
        {{#each categories}}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="/images/{{this.img}}.jpg" alt="{{this.img}}"></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">{{this.title}}</a>
                    </h4>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <!-- /.row -->

</div>
<!-- /.col-lg-9 -->

</div>
<!-- /.row -->

</div>
<!-- /.container -->

