<div class="column">
  <div class="row  justify-content-center text-left">
    <form class="col-md-6 col-sm-10 col-lg-4" method="POST" action="/register">
      <div class="form-group">
        <label for="fname">First Name</label>
        <input class="form-control" type="text" id="fname" class="fadeIn second" name="firstName"
          placeholder="Enter your first name">
        {{#if this.first_n}} <br><span class="errorMessage" style="color: red;">{{this.first_n}}</span> {{/if}}
      </div>
      <div class="form-group">
        <label for="lname">Last Name</label>
        <input class="form-control" type="text" id="lname" class="fadeIn second" name="lastName"
          placeholder="Enter your last name">
        {{#if this.last_n}} <br><span class="errorMessage" style="color: red;">{{this.last_n}}</span> {{/if}}
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" id="email" class="fadeIn third" name="email"
          placeholder="Enter your email">
        {{#if this.mailL}} <br><span class="errorMessage" style="color: red;">{{this.mailL}}</span> {{/if}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" class="fadeIn third" name="password"
          placeholder="Password">
        {{#if this.p_pass}} <br><span class="errorMessage" style="color: red;">{{this.p_pass}}</span> {{/if}}
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>

  </div>
</div>
<!-- Login Form -->