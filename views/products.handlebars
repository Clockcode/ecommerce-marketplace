<div class="container">
<div class="row my-row">
    <div class="dropdown">
  <button class="btn btn-primary dropdown-toggle"
          type="button" id="dropdownMenu1" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
    Seaerch By Categories
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <a class="dropdown-item" href="/categories/electronics">Electronics</a>
    <a class="dropdown-item" href="/categories/home">Home</a>
    <a class="dropdown-item" href="/categories/best-sellers">Best Sellers</a>
  </div>
</div>
</div>


<div class="row mb-5">
        {{#each data}}
        <div class="col-sm-3">
            <div class="product-grid">
                <div class="product-image">
                    <a href="/product-page/{{this._id}}" style="height: 220px; position: relative">
                       <img class="card-img-top" src="/uploads/{{this.pic}}" alt="{{this.pic}}">
                    </a>
                    <ul class="social">
                        <li><a href="add-to-cart/{{this._id}}" role="button" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                    {{#if this.best}}
                    <span class="product-new-label"><i>BEST</i></span>
                    {{/if}}
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="/product-page/{{this._id}}">{{this.title}}</a></h3>
                    <span class="price"><h5>CA${{this.price}}</h5></span>
                </div>
            </div>
        </div>
{{/each}}
</div>
</div>
