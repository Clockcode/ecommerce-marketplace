{{#if products }}
<div class="container">
    <div class="row">
        {{!-- <div > --}}
        <ul class="list-group w-75">
            {{#each products }}
            <li class="list-group-item  p-4">
                <span class="badge">X{{ this.qty }}</span>
                <strong class="w-50">{{ this.item.title }}</strong>
                <span class="label label-success">${{ this.price }}</span>
                {{!-- <div class="btn-group float-sm-right"> --}}
                <button class="btn btn-danger dropdown-toggle" type="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">Dropdown</button>
                <div class="dropdown-menu">
                    <a class="btn btn-danger dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                    <a class="btn btn-danger dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>
                </div>
                {{!-- </div> --}}
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 ">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 ">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
</div>
{{else }}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-6 ">
            <h2>No Items in Cart</h2>
        </div>
    </div>
</div>
{{/if}}